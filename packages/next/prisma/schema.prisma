generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model ProjectEvent {
  id        Int     @id @default(autoincrement())
  shortcode String
  eventType String
  eventData String
  version   Int     @default(1)
  
  @@unique([shortcode, version])
}

model ProjectSnapshot {
  id        Int     @id @default(autoincrement())
  shortcode String
  snapshot  String
  version   Int     @default(1)
  
  @@unique([shortcode])
}

